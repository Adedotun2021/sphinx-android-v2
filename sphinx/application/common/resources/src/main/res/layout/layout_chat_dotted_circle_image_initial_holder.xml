<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_chat_image_status_holder"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:padding="4dp">

    <View
        android:id="@+id/dotted_circle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/background_dotted_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_initials"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/chat_initials_circle"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="4dp"
        tools:text="TT" />


    <!-- Clock Icon -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_clock"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_clock_black_24dp"
        android:tint="@color/secondaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
