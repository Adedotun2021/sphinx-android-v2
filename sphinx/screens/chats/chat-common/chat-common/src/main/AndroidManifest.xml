<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application>
        <activity
            android:name=".ui.activity.full_screen_activity.FullscreenVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/AppTheme.Fullscreen" />

        <activity android:name=".ui.activity.call_activity.CallActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/AppTheme.Fullscreen"/>

        <service
            android:name=".ui.activity.call_activity.service.ForegroundService"
            android:foregroundServiceType="mediaPlayback|camera|microphone"
            android:exported="false" />
    </application>

</manifest>