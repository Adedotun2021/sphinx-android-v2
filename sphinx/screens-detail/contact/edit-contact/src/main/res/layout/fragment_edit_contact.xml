<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_detail_screen"
    tools:context="chat.sphinx.edit_contact.ui.EditContactFragment">

    <include
        android:id="@+id/include_edit_contact_header"
        layout="@layout/layout_contact_detail_screen_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_header_height"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_edit_contact_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/include_edit_contact_layout"
                layout="@layout/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_profile_basic_container_pin_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_form_horizontal_margin"
                android:layout_marginTop="@dimen/default_header_margin_horizontal"
                android:layout_marginEnd="@dimen/default_layout_margin"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="@string/share_timezone_label"
                android:textColor="@color/text"
                android:textSize="@dimen/pin_text_view_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include_edit_contact_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_contact_timezone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_form_horizontal_margin"
                android:layout_marginTop="@dimen/default_header_margin_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:singleLine="true"
                android:text="@string/timezone_label"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/default_form_text_view_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_profile_basic_container_pin_toggle" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_edit_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_form_horizontal_margin"
                android:checked="false"
                android:theme="@style/CustomSwitch"
                android:thumb="@drawable/switch_thumb_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_profile_basic_container_pin_toggle"
                app:track="@drawable/switch_track_selector" />

            <Spinner
                android:id="@+id/spinner_timezones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_form_horizontal_margin"
                android:layout_marginTop="@dimen/default_layout_margin"
                android:layout_marginEnd="@dimen/default_form_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_contact_timezone" />

            <include
                android:id="@+id/include_edit_contact_layout_save"
                layout="@layout/layout_contact_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/save_to_contacts_button_bottom_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>